@model MovieMgr.Web.ViewModels.CategoryDetailsViewModel


<a asp-action="CreateMovie" asp-route-catId="@Model.Category.Id">Neuen Film anlegen</a>

<h2>Filme zur Kategorie @Model.Category.CategoryName</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Movies[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Movies[0].Duration)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Movies[0].Year)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>
                    @movie.Title
                </td>
                <td>
                    @movie.Duration
                </td>
                <td>
                    @movie.Year
                </td>
            </tr>
        }
    </tbody>
</table>